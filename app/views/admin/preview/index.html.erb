<h1>Preview</h1>

<table class="table">
	<tr>
		<th>Domain</th>
		<th>Subdomain</th>
		<th>Actions</th>
	</tr>
	<% @plugin_config.domains.each_pair do |domain_name, domain| %>
		<% domain.subdomains.each_pair do |subdomain_name, subdomain|
			config = subdomain.config
			next if '_general'.eql? subdomain_name
		%>
			<tr>
				<th>
					<%= domain_name %>
				</th>
				<td><%= subdomain_name %></td>
				<td>
					<a href="<%= admin_preview_show_path(uri: "http://#{subdomain_name}.#{domain_name}") %>" target="preview_frame">
						Preview <%= "#{subdomain_name}.#{domain_name}" %>
					</a>
				</td>
			</tr>
		<% end %>
	<% end %>
</table>

<br/>
<iframe name="preview_frame" src="#" style="border:5px dotted red; width: 100%; height: 1000px;"></iframe>
