<h1>Editing Content for {{ getLanguage(currentMenu.language_id).iso_639_1 }} - {{ getSite(currentSite.id).name }}</h1>

<form class="form-horizontal" role="form">
	<div class="form-group">
		<label class="col-sm-2 control-label" for="site_name">Title</label>

		<div class="col-sm-10">
			<input type="text" id="site_name" data-ng-model="content.title" placeholder="Title"/>
			<span data-ng-if="errors.title" style="color: red;">{{ printErrors(errors.title) }}</span>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Body</label>

		<div class="col-sm-10">
			<textarea class="form-control" rows="3" data-ng-model="content.body"></textarea>
			<span data-ng-if="errors.body" style="color: red;">{{ printErrors(errors.body) }}</span>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Body short</label>

		<div class="col-sm-10">
			<textarea class="form-control" rows="3" data-ng-model="content.body_short"></textarea>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label" for="site_name">Published at</label>

		<div class="col-sm-10">
			<input type="date" id="site_name" data-ng-model="content.published_at" placeholder="Release date"/>
			<span data-ng-if="errors.published_at" style="color: red;">{{ printErrors(errors.published_at) }}</span>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Widget</label>

		<div class="col-sm-10">
			<select data-ng-model="content.widget_id" ng-options="widget.id as widget.name for widget in data.widgets"></select>
			<span data-ng-if="errors.widget_id" style="color: red;">{{ printErrors(errors.widget_id) }}</span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button data-ng-click="saveContent()" class="btn btn-primary">Save</button>

			<span data-ng-if="errors" style="color: red;">Please correct the errors!</span>
		</div>
	</div>
</form>

<a data-ng-href="#/contents">Back</a>
