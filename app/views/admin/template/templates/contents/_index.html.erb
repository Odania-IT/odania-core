<h1>Content for {{ getLanguage(currentMenu.language_id).iso_639_1 }} - {{ getSite(currentSite.id).name }}</h1>

<table class="table">
	<thead>
	<tr>
		<th>Title</th>
		<th>Publish at</th>
		<th>Language</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	</thead>

	<tbody>
	<tr data-ng-repeat="content in contents">
		<td>{{ content.title }}</td>
		<td>{{ content.published_at }}</td>
		<td>{{ getLanguage(content.language_id).iso_639_1 }}</td>
		<td><a data-ng-href="#/contents/{{ content.id }}">Show</a></td>
		<td><a data-ng-href="#/contents/{{ content.id }}/edit">Edit</a></td>
		<td><a ng-confirm-click="deleteContent(content.id)" ng-confirm-message="Are you sure?">Destroy</a></td>
	</tr>
	</tbody>
</table>

<br/>

<a data-ng-href="#/contents/new">New Content</a>
