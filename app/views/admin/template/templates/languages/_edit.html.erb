<h1>Editing admin_language</h1>

<form class="form-horizontal" role="form">
	<div class="form-group">
		<label class="col-sm-2 control-label">Name</label>

		<div class="col-sm-10">
			<input type="text" data-ng-model="language.name" placeholder="Language Name"/>
			<span data-ng-if="errors.name" style="color: red;">{{ printErrors(errors.name) }}</span>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">ISO 639-1</label>

		<div class="col-sm-10">
			<input type="text" data-ng-model="language.iso_639_1" placeholder="de"/>
			<span data-ng-if="errors.iso_639_1" style="color: red;">{{ printErrors(errors.iso_639_1) }}</span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button data-ng-click="saveLanguage()" class="btn btn-primary"><%= t('general.save') %></button>

			<span data-ng-if="errors" style="color: red;"><%= t('general.Please correct the errors') %></span>
		</div>
	</div>
</form>

<a data-ng-href="#/sites">Back</a>
