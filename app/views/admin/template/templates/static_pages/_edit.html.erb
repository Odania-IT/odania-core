<form class="form-horizontal" role="form">
	<div class="row-fluid">
		<div class="col-md-9">
			<h1>Editing Static Page for {{ getLanguage(currentMenu.language_id).iso_639_1 }} - {{
				getSite(currentSite.id).name }}</h1>

			<div class="form-group">
				<label class="col-sm-2 control-label" for="site_name">Title</label>

				<div class="col-sm-10">
					<input type="text" id="site_name" data-ng-model="staticPage.title" placeholder="Title" class="form-control"/>
					<span data-ng-if="errors.title" style="color: red;">{{ printErrors(errors.title) }}</span>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Body</label>

				<div class="col-sm-10">
					<div data-text-angular data-ng-model="staticPage.body" data-placeholder="<%= t('admin.views.create_static_page.body.placeholder') %>"></div>
					<span data-ng-if="errors.body" style="color: red;">{{ printErrors(errors.body) }}</span>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Widget</label>

				<div class="col-sm-10">
					<select data-ng-model="staticPage.widget_id" ng-options="widget.id as widget.name for widget in data.widgets"></select>
					<span data-ng-if="errors.widget_id" style="color: red;">{{ printErrors(errors.widget_id) }}</span>
				</div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button data-ng-click="saveStaticPage()" class="btn btn-primary">Save</button>

					<span data-ng-if="errors" style="color: red;">Please correct the errors!</span>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Is Global</label>

				<div class="col-sm-10">
					<input type="checkbox" data-ng-model="staticPage.is_global">
				</div>
			</div>
		</div>
	</div>
</form>
