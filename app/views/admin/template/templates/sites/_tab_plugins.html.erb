<div class="form-group">
	<label class="col-sm-2 control-label">Plugins</label>

	<div class="col-sm-10">
		<div data-ng-repeat="plugin in admin.plugins" class="form-control">
			<input type="checkbox" name="selectedPlugins[]" value="{{plugin}}" ng-checked="site.plugins.indexOf(plugin) > -1"
					 data-ng-click="togglePluginSelection(plugin)"> {{plugin}}
		</div>
	</div>
</div>
