<form class="form-horizontal" role="form">
	<div class="row-fluid">
		<div class="col-md-9">
			<h1>Editing Site {{ site.name }}</h1>

			<uib-tabset>
				<uib-tab heading="General"><%= render partial: 'admin/template/templates/sites/tab_general' %></uib-tab>
				<uib-tab heading="Description"><%= render partial: 'admin/template/templates/sites/tab_description' %></uib-tab>
				<uib-tab heading="Email & Tracking"><%= render partial: 'admin/template/templates/sites/tab_mail_tracking' %></uib-tab>
				<uib-tab heading="Social"><%= render partial: 'admin/template/templates/sites/tab_social' %></uib-tab>
				<uib-tab heading="Template"><%= render partial: 'admin/template/templates/sites/tab_template' %></uib-tab>
				<uib-tab heading="Plugins"><%= render partial: 'admin/template/templates/sites/tab_plugins' %></uib-tab>
			</uib-tabset>
		</div>
		<div class="col-md-3">
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button data-ng-click="saveSite()" class="btn btn-primary"><%= t('general.save') %></button>

					<span data-ng-if="errors" style="color: red;"><%= t('general.Please correct the errors') %></span>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">is Active</label>

				<div class="col-sm-10">
					<input type="checkbox" data-ng-model="site.is_active">
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">is Default</label>

				<div class="col-sm-10">
					<input type="checkbox" data-ng-model="site.is_default">
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Default Language</label>

				<div class="col-sm-10">
					<select data-ng-model="site.default_language_id">
						<option data-ng-repeat="language in languages" value="{{ language.id }}">{{ language.iso_639_1 }}
						</option>
					</select>
					<span data-ng-if="errors.default_language_id" style="color: red;">{{ printErrors(errors.default_language_id) }}</span>
				</div>
			</div>
		</div>
	</div>
</form>
