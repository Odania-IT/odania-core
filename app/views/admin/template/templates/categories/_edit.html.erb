<form class="form-horizontal" role="form">
	<div class="row-fluid">
		<div class="col-md-9">
			<h1>Editing Category for {{ getLanguage(currentMenu.language_id).iso_639_1 }} - {{ getSite(currentSite.id).name }}</h1>

			<div class="form-group">
				<label class="col-sm-2 control-label" for="site_name">Title</label>

				<div class="col-sm-10">
					<input type="text" id="site_name" data-ng-model="category.title" placeholder="Title" class="form-control"/>
					<span data-ng-if="errors.title" style="color: red;">{{ printErrors(errors.title) }}</span>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<span data-ng-if="errors" style="color: red;"><%= t('general.Please correct the errors') %></span>

			<div class="well">
				<button data-ng-click="saveCategory()" class="btn btn-primary"><%= t('general.save') %></button>
			</div>
		</div>
	</div>
</form>
