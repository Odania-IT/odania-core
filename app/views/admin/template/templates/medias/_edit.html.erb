<form class="form-horizontal" role="form">
	<div class="row-fluid">
		<div class="col-md-9">
			<h1>Editing Media for {{ getLanguage(currentMenu.language_id).iso_639_1 }} - {{ getSite(currentSite.id).name }}</h1>

			<div class="form-group">
				<label class="col-sm-2 control-label" for="site_name">Title</label>

				<div class="col-sm-10">
					<input type="text" id="site_name" data-ng-model="media.title" placeholder="Title" class="form-control"/>
					<span data-ng-if="errors.title" style="color: red;">{{ printErrors(errors.title) }}</span>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Body short</label>

				<div class="col-sm-10">
					<div data-text-angular data-ng-model="media.body_short" data-placeholder="<%= t('admin.views.create_media.body_short.placeholder') %>"></div>
					<span data-ng-if="errors.body_short" style="color: red;">{{ printErrors(errors.body_short) }}</span>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Body</label>

				<div class="col-sm-10">
					<div data-text-angular data-ng-model="media.body" data-placeholder="<%= t('admin.views.create_media.body.placeholder') %>"></div>
					<span data-ng-if="errors.body" style="color: red;">{{ printErrors(errors.body) }}</span>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<h2><%= t('admin.views.create_media.published_at.title') %></h2>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button data-ng-click="saveMedia()" class="btn btn-primary">Save</button>

					<span data-ng-if="errors" style="color: red;">Please correct the errors!</span>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label" for="site_name">Published at</label>

				<div class="col-sm-10">
					<input type="date" id="site_name" data-ng-model="media.published_at" placeholder="Release date"/>
					<span data-ng-if="errors.published_at" style="color: red;">{{ printErrors(errors.published_at) }}</span>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Widget</label>

				<div class="col-sm-10">
					<select data-ng-model="media.widget_id" ng-options="widget.id as widget.name for widget in data.widgets"></select>
					<span data-ng-if="errors.widget_id" style="color: red;">{{ printErrors(errors.widget_id) }}</span>
				</div>
			</div>
		</div>
	</div>
</form>
