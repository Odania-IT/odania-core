<h1>Editing admin_menu</h1>

<form class="form-horizontal" role="form">
	<div class="form-group">
		<label class="col-sm-2 control-label">Language</label>

		<div class="col-sm-10">
			<select data-ng-model="menu.language_id">
				<option data-ng-repeat="language in languages" value="{{ language.id }}">{{ language.iso_639_1 }}</option>
			</select>
			<span data-ng-if="errors.language_id" style="color: red;">{{ printErrors(errors.language_id) }}</span>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Published</label>

		<div class="col-sm-10">
			<input type="checkbox" data-ng-model="menu.published">
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Default Widget</label>

		<div class="col-sm-10">
			<select data-ng-model="menu.widget_id" ng-options="widget.id as widget.name for widget in data.widgets"></select>
			<span data-ng-if="errors.widget_id" style="color: red;">{{ printErrors(errors.widget_id) }}</span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button data-ng-click="saveMenu()" class="btn btn-primary">Save</button>

			<span data-ng-if="errors" style="color: red;">Please correct the errors!</span>
		</div>
	</div>
</form>

<a data-ng-href="#/menus">Back</a>
