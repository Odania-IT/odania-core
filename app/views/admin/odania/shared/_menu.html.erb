<div class="container-fluid" data-ng-controller="SideMenuController">
	<div data-ng-if="currentSite">
		<select data-ng-model="current.siteId" data-ng-change="changedSite()">
			<option data-ng-repeat="site in sites" value="{{ site.id }}">{{ site.name }}</option>
		</select>

		<select data-ng-model="current.menuId" data-ng-change="changedMenu()">
			<option data-ng-repeat="menu in currentSite.menus" value="{{ menu.id }}">{{
				getLanguage(menu.language_id).iso_639_1 }}
			</option>
		</select>
	</div>
	<div data-ng-if="!currentSite">
		No Site
	</div>
	<br/>
	<%= content_for?(:admin_selection) ? yield(:admin_selection) : '' %>

	<div class="nav-collapse">
		<% Odania.admin.pages.each_pair do |category, pages| %>
			<% unless :global.eql? category %>
			<div data-ng-if="currentSite">
			<% end %>
			<h3><%= t("admin.menu.categories.#{category}") %></h3>
			<ul class="nav nav-list">
				<% pages.each do |admin_page| %>
					<% if admin_page[:in_menu] %>
						<li><%= link_to t("admin.menu.#{admin_page[:name]}"), "##{admin_page[:path]}" %></li>
					<% end %>
				<% end %>
			</ul>
			<% unless :global.eql? category %>
			</div>
			<% end %>
		<% end %>
	</div>
</div>
