<div data-ng-repeat="adminWidget in admin.widgets" data-ng-show="adminWidget.template == widget.template">
	<div data-ng-if="parameter.type == 'text'">
		<input type="text" data-ng-model="param"/>
	</div>
	<div data-ng-if="parameter.type == 'number'">
		<input type="number" data-ng-model="param"/>
	</div>
	<div data-ng-if="parameter.type == 'wysiwyg'">
		<div data-text-angular data-ng-model="param" data-placeholder="<%= t('admin.views.create_widget.wysiwyg.placeholder') %>"></div>
	</div>
	<div data-ng-if="parameter.type == 'site'">
		<select data-ng-model="param" data-ng-options="site.id as site.name for site in sites"></select>
	</div>
</div>
