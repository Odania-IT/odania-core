<%= form_for([:admin, @admin_content]) do |f| %>
	<% if @admin_content.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@admin_content.errors.count, "error") %> prohibited this admin_content from being saved:</h2>

			<ul>
				<% @admin_content.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :site_id %>
		<br/>
		<%= f.collection_select :site_id, Odania::Site.order('name ASC'), :id, :name %>
	</div>
	<div class="field">
		<%= f.label :title %>
		<br/>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :body %>
		<br/>
		<%= f.cktext_area :body %>
	</div>
	<div class="field">
		<%= f.label :body_short %>
		<br/>
		<%= f.cktext_area :body_short %>
	</div>
	<div class="field">
		<%= f.label :published_at %>
		<br/>
		<%= f.text_field :published_at %>
	</div>
	<div class="field">
		<%= f.label :language_id %>
		<br/>
		<%= f.collection_select :language_id, Odania::Language.order('name ASC'), :id, :name %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
