<%= render partial: 'admin/odania/menu_items/select_menu_item' %>

<h1>Listing admin_contents</h1>

<table>
	<thead>
	<tr>
		<th>Title</th>
		<th>Publish at</th>
		<th>Language</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	</thead>

	<tbody>
	<% @admin_contents.each do |admin_content| %>
		<tr>
			<td><%= admin_content.title %></td>
			<td><%= admin_content.published_at %></td>
			<td><%= admin_content.language.name %></td>
			<td><%= link_to 'Show', [:admin, @odania_menu, admin_content] %></td>
			<td><%= link_to 'Edit', edit_admin_odania_menu_odania_content_path(@odania_menu, admin_content) %></td>
			<td><%= link_to 'Destroy', [:admin, @odania_menu, admin_content], method: :delete, data: {confirm: 'Are you sure?'} %></td>
		</tr>
	<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Content', new_admin_odania_menu_odania_content_path(@odania_menu) %>
