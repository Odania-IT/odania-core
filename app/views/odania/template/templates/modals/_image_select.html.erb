<div class="modal-header">
	<h3><%= t('modals.select_image.header') %></h3>
</div>
<div class="modal-body">
	<div class="select_image" data-ng-repeat="media in medias" data-ng-click="selectMedia(media)" data-ng-class="{ 'select_image_active': (selectedImage.id == media.id) }">
		{{ image }}
		<img data-ng-src="{{ media.image_thumb_url }}" alt="{{ media.title }}" title="{{ media.title }}"/>
	</div>

	<div class="clearfix"></div>
	<p>
		<span><%= t('modals.select_image.alt_tag') %></span>: <input type="text" data-ng-model="selectedImage.alt"/>
		<span><%= t('modals.select_image.title_tag') %></span>: <input type="text" data-ng-model="selectedImage.title"/>
	</p>
</div>
<div class="modal-footer">
	<div class="has-error" data-ng-show="errors.display_no_image_selected"><%= t('modals.select_image.no_image_selected') %></div>

	<button type="button" class="btn"
			  data-ng-click="modalOptions.close()"><%= t('modals.general.close') %>
	</button>
	<button class="btn btn-primary" data-ng-click="modalOptions.ok();">
		<%= t('modals.select_image.ok_button') %>
	</button>
</div>
