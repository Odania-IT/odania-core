<% cache current_menu do %>
	<ul class="nav navbar-nav">
		<%= render :partial => 'odania/shared/menu_part', locals: {menu_items: current_menu.menu_items.where(parent_id: nil)} %>

		<% if current_menu.display_categories %>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('Categories') %> <b class="caret"></b></a>
				<ul class="dropdown-menu">
					<% current_site.categories.where(language_id: current_menu.language_id, parent_id: nil).each do |category| %>
						<li><%= link_to category.title, category_path(category, locale: I18n.locale.to_s) %></li>
					<% end %>
				</ul>
			</li>
		<% end %>
	</ul>
<% end %>
